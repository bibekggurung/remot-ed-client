<section data-id="{{quiz._id}}" class="single-quiz">
  <h4>Almost done! Double check your answers for: {{quiz.title}}, and make sure they look accurate before submitting.</h4>

  {{#each responses as |response|}}
    <p>Question:</p>
    {{response.questionOwner.title}}
    <p>Your response:</p>
    {{response.choice}}
    <br>
  {{/each}}

</section>
<br>
<button class="btn primary-btn submit-quiz">Submit</button>
